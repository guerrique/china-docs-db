  <p> <%= f.simple_fields_for :awards do |award| %></p>
  <p>Award</p>
  <p> <%= award.text_field :name %> </p>
  <p> <%= award.text_field :year %></p>
  <p> <%= award.text_field :location %></p>
  <% end %>
  <%= f.fields_for :awards, @doc.awards.build do |award| %>
  <div class='links'>
  <%= link_to_add_association 'add award', f, :awards %>
  </div>
  <% end %>

<h2>Useful Links</h2>
  <%= f.simple_fields_for :links do |link| %>
  <P>Link</P>
  <p> <%= link.text_field :description %></p>
  <p> <%= link.text_field :url %></p>
<% end %>
<%= simple_fields_for :links, @doc.links.build do |link| %>
<div class="links">
  <%= link_to_add_association 'add link', f, :links %>
</div>
<% end %>


  <p> <%= f.button :submit %></p>
<% end %>
