

<%= simple_form_for @doc, url: doc_path do |f| %>
<p><%= f.label :name %></p>
  <p> <%= f.text_field :name %></p>
<p> <%= f.label :chinese_name %></p>
  <p> <%= f.text_field :chinese_name %></p>
  <p> <%= f.label :year %></p>
  <p> <%= f.text_field :year %></p>
  <p> <%= f.label :duration %></p>
  <p> <%= f.text_field :duration %></p>
  <p> <%= f.label :doc_summary_short %></p>
  <p> <%= f.text_field :doc_summary_short %></p>
  <p> <%= f.label :doc_summary_long %></p>
  <p> <%= f.text_field :doc_summary_long %></p>
  <p> <%= f.label :doc_summary_source %></p>
  <p> <%= f.text_field :doc_summary_source %></p>
  <p> <%= f.label :trailer_link %></p>
  <p> <%= f.text_field :trailer_link %></p>
