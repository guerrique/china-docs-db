<div class="sections">
  <% @docs = Doc.order("name ASC").group_by{ |u| u.name[0] }  %>
  <% @docs.each do |letter, docs| %>
  <h1><%= letter %></h1>
  <ul>
    <% docs.each do |doc| %>
      <li> <%= link_to doc.name, doc_path(doc) %> </li>
      <%= link_to "Edit", edit_doc_path(doc) %>
      <%= link_to "Delete", doc_path(doc), method: :delete %>
    <% end %>
  </ul>
  <% end %>
</div>
