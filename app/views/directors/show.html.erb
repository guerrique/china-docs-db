<h2><%= @director.name %></h2>
<p><%= @director.bio_short %></p>
<p><%= @director.bio_long  %></p>
<p><%= @director.bio_source  %></p>
<p><%= @director.birth_year  %></p>
<p><%= @director.death_year  %></p>
<p><%= cl_image_tag @director.photo.key, height: 300, width: 400, crop: :fill %></p>
<% @director.pages.each do |page| %>
<p><%= page.description %>, <%= page.url %></p>
<% end %>
<%= link_to "Edit", edit_director_path(@director) %>
<%= link_to "Delete", director_path(@director), method: :delete %>
